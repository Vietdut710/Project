    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:layout_centerHorizontal="true"
            android:text="Title"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_centerHorizontal="true"
            android:text="content"
            android:textColor="@color/grey"
            android:textSize="17dp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/play_music_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:src="@drawable/ic_previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></ImageButton>

    <ImageButton
        android:id="@+id/play_music_stop"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/play_music_previous"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_stop"
        android:background="@null"
        android:layout_marginBottom="20dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/play_music_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/play_music_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_play"
        android:background="@null"
        android:layout_marginBottom="20dp"
        ></ImageButton>

    <ImageButton
        android:id="@+id/play_music_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/play_music_play"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_next"
        android:background="@null"
        android:layout_marginBottom="20dp"
        ></ImageButton>

    <SeekBar
        android:id="@+id/play_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/play_music_previous"
        android:layout_marginBottom="20dp"
        ></SeekBar>
</androidx.constraintlayout.widget.ConstraintLayout>