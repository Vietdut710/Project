<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/background_play_music"
        >

            <ImageView
                android:id="@+id/view_notification_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_add_list_24"
                ></ImageView>

            <TextView
                android:id="@+id/view_notification_name_music"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/view_notification_image"
                android:gravity="center"
                android:text="Name music"
                android:textSize="20dp"
                ></TextView>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/view_notification_name_music"
            android:layout_alignParentEnd="true"

            android:background="@drawable/ic_cancel"></Button>

        <Button
                android:id="@+id/view_notification_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_notification_name_music"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/view_notification_image"
                android:background="@drawable/ic_previous"
                ></Button>

            <Button
                android:id="@+id/view_notification_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_notification_name_music"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/view_notification_pre"
                android:background="@drawable/ic_play"
                ></Button>

            <Button
                android:id="@+id/view_notification_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_notification_name_music"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/view_notification_play"
                android:background="@drawable/ic_next"
                ></Button>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>