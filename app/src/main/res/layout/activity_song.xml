<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_drawable"
    >
        <LinearLayout
            android:id="@+id/song_lo_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/song_tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <ImageView

                    android:id="@+id/song_img_search"
                    android:layout_width="61dp"
                    android:layout_height="51dp"
                    android:background="@drawable/bgic_drawable"
                    android:src="@drawable/ic_search"
                    />
                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:id="@+id/song_lo_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:borderColor="@color/string_blue"
                    >
                        <EditText
                            android:id="@+id/song_edt_search"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/search_drawable"
                            android:textColor="@color/string_blue"
                            android:hint="@string/search"
                            />
                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
        </LinearLayout>


        <TextView

            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/song_tv_title"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="40dp"
            android:gravity="center"
            android:text="Bài Hát"
            android:textColor="@color/string_blue"
            />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/song_lo_lst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/song_lo_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <ListView
                    android:id="@+id/song_playlist"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:paddingTop="10dp" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>