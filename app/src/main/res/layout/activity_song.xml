<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootSong"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/song_item"
                >
                <TextView
                    android:id="@+id/song_id_music"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/id_music"
                    android:textSize="20dp"
                    android:textColor="@color/yellow"
                    android:background="@drawable/background_play_music"
                    ></TextView>

                <TextView
                    android:id="@+id/song_name_music"
                    android:layout_below="@+id/song_id_music"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/name_music"
                    android:textSize="20dp"
                    android:textColor="@color/yellow"
                    android:background="@drawable/background_play_music"
                    ></TextView>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>